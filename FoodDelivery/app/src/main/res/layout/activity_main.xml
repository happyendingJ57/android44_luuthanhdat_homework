<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guilinengang0.9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guilinengang0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idbtnHome"
                android:drawableTop="@drawable/logo_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Home"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:background="@null"

                />

            <Button
                android:id="@+id/idbtnMenu"
                android:drawableTop="@drawable/logo_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Menu"
                android:textAllCaps="false"
                android:background="@null"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/idbtnCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_cart"
                android:textAllCaps="false"
                android:background="@drawable/background_cart"/>

            <Button
                android:id="@+id/idbtnFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Favorite"
                android:textAllCaps="false"
                android:background="@null"
                android:drawableTop="@drawable/logo_heart"
                android:textSize="19dp" />

            <Button
                android:id="@+id/idbtnChat"
                android:drawableTop="@drawable/logo_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Chat"
                android:textAllCaps="false"
                android:background="@null"
                android:textSize="20dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>