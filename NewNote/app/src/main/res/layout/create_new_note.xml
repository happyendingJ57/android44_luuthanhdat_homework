<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C9191">

            <TextView

                android:id="@+id/tvCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="Create new Node"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/btnSave"
                android:text="SAVE"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_save_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/custom_tiltle"
                android:text="Title" />

            <EditText
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/tv1"
                android:layout_margin="20dp"
                android:background="@drawable/custom_tiltle"
                android:gravity="top"
                android:text="description" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind me at" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="14:20"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04/03/2016"
                android:textStyle="bold"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Type:" />

            <Spinner
                android:id="@+id/spiner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/tvType"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvType"
                android:layout_margin="10dp"
                android:text="Tags" />

            <TextView
                android:id="@+id/tvrightTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spiner"
               android:layout_margin="7dp"
                android:layout_toRightOf="@+id/tvTags"
                android:text="Choose tags"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWeeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTags"
                android:layout_margin="10dp"
                android:text="Weeks:" />

            <TextView
                android:id="@+id/tvRightWeeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvrightTags"
                android:layout_margin="12dp"
                android:layout_toRightOf="@+id/tvWeeks"
                android:text="Choose Weeks"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btnTune"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:background="#9B9D9F"
            android:gravity="center"
            android:text="Tune"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>


</layout>